{
	"name": "hiraeth/turso",
	"description": "Turso DB Abstraction for Hiraeth (and others)",
	"keywords": ["turso", "database", "dbal"],
	"license": "MIT",
	"minimum-stability": "dev",
	"prefer-stable": true,
	"authors": [
		{
			"name": "Matthew J. Sahagian",
			"email": "matthew.sahagian@gmail.com",
			"role": "Lead Architect / Developer"
		}
	],
	"require": {
		"php": ">=8.2",
        "ext-pdo_sqlite": "*",
        "hiraeth/app": "^3.0",
        "guzzlehttp/guzzle": "^7.8"
	},
	"require-dev": {
		"phpstan/phpstan": "^1.10",
		"phpunit/phpunit": "^8.5"
	},
    "autoload": {
		"classmap": ["src/"]
	},
    "autoload-dev": {
        "classmap": [
            "test/src"
        ]
    },
    "type": "opus-package",
    "extra": {
        "opus": {
            "hiraeth/app": {
                "config": ""
            }
        }
    },
    "config": {
        "allow-plugins": {
            "imarc/opus": true
        }
    }
}
